{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Vue Library",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "types": [
            "node",
            "vue"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
